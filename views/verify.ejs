<%- include('partials/header'); %>

<style>
  .nnn{
    margin-top: 0%;
  }
  .n{
    color:black !important;
  }
  .btn{
    background-color: rgb(0, 115, 255) !important;
    color: #fff;
     border: none !important;
}
</style>

<div class="container d-flex justify-content-center align-items-center min-vh-100   nnn">
  <div class="card shadow-lg border-0 p-4" style="width: 100%; max-width: 400px; border-radius: 1rem;">
    <div class="card-body">
      <div class="text-center mb-4">
        <h3 class=" n fm-bold text-primary">Email Verification</h3>
        <p class="text-muted">Enter the 6-digit OTP sent to your email</p>
      </div>

      <form action="/verify/<%= userId %>" method="POST">
        <div class="mb-3">
          <label for="otp" class="form-label">OTP Code</label>
          <input type="text" class="form-control form-control-lg" id="otp" name="otp" maxlength="6" pattern="[0-9]{6}" required placeholder="Enter OTP">
        </div>

        <button type="submit" class="btn btn-primary w-100 fw-semibold">Verify</button>
      </form>

      <div class="text-center mt-3">
        <small class="text-muted">Didnâ€™t receive an OTP?</small><br/>
        <a href="/verify/<%= userId %>" class="text-decoration-none">Resend OTP</a>
      </div>
    </div>
  </div>
</div>
<%- include('partials/footer'); %>